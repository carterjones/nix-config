[
    { "key": "shift+cmd+l",     "command": "editor.action.insertCursorAtEndOfEachLineSelected",
                                   "when": "editorTextFocus" },
    { "key": "shift+cmd+]",     "command": "workbench.action.nextEditorInGroup" },
    { "key": "shift+cmd+[",     "command": "workbench.action.previousEditorInGroup" },
    { "key": "ctrl+e",          "command": "cursorLineEnd" },
    { "key": "cmd+right",       "command": "cursorLineEnd" },
    { "key": "cmd+left",        "command": "cursorLineStart" },
    { "key": "cmd+z",           "command": "undo",
                                   "when": "textInputFocus && !editorReadonly" },
    { "key": "cmd+shift+z",     "command": "redo",
                                   "when": "textInputFocus && !editorReadonly" },
    { "key": "cmd+x",           "command": "editor.action.clipboardCutAction",
                                   "when": "textInputFocus && !editorReadonly" },
    { "key": "cmd+v",           "command": "editor.action.clipboardPasteAction",
                                   "when": "textInputFocus && !editorReadonly" },
    { "key": "cmd+p",           "command": "workbench.action.quickOpen" },
    { "key": "cmd+shift+p",     "command": "workbench.action.showCommands" },
    { "key": "cmd+s",           "command": "workbench.action.files.save" },
    { "key": "cmd+c",           "command": "editor.action.clipboardCopyAction",
                                   "when": "textInputFocus" },
    { "key": "cmd+f",           "command": "actions.find" },
    { "key": "alt+right",       "command": "cursorWordStartRight" },
    { "key": "alt+left",        "command": "cursorWordEndLeft" },
    { "key": "shift+alt+right", "command": "cursorWordStartRightSelect" },
    { "key": "shift+alt+left",  "command": "cursorWordEndLeftSelect" },
    { "key": "cmd+d",           "command": "editor.action.addSelectionToNextFindMatch",
                                   "when": "editorFocus" },
    { "key": "cmd+up",          "command": "cursorTop",
                                   "when": "textInputFocus" },
    { "key": "cmd+down",        "command": "cursorBottom",
                                   "when": "textInputFocus" },
    { "key": "cmd+w",           "command": "workbench.action.closeActiveEditor" },
    { "key": "cmd+shift+t",     "command": "workbench.action.reopenClosedEditor" },
    { "key": "meta+a",          "command": "workbench.action.terminal.selectAll" },
    { "key": "alt+backspace",   "command": "deleteWordLeft",
                                   "when": "textInputFocus && !editorReadonly" },
]
